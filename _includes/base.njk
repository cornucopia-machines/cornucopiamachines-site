    <meta name="description" content="Grow smarter with sensor-driven raised bed automation. Cornucopia GrowMachine."/>
    <script
      defer
      src="https://analytics.cornucopiamachines.eu/script.js"
      data-website-id="fe9bcb3b-c9dd-4ac6-9a0c-c7ad99a64453"
      data-do-not-track="true"
      data-domains="cornucopiamachines.eu, cornucopiamachines.com"
      data-exclude-hash="true"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <script>
      // Set initial theme before CSS loads to prevent flash
      (function () {
        try {
          var t = localStorage.getItem('theme');
          if (t) {
            document
              .documentElement
              .dataset
              .theme = t;
          } else if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
            document
              .documentElement
              .dataset
              .theme = 'dark';
          }
        } catch (e) {}
      })();
    </script>
    <link rel="stylesheet" href="/assets/styles.css"/>
  </head>
