    <header class="site-header">
      <div class="container header-inner">
        <a class="brand" href="/">
          <img class="logo" src="/images/cornucopia-logo-no-text.png" srcset="/images/cornucopia-logo-no-text.png 1x, /images/cornucopia-logo-no-text.png 2x" alt="Cornucopia Machines logo" width="28" height="28" />
          <span class="brand-text">Cornucopia<span>Machines</span></span>
        </a>
        <button class="theme-toggle" aria-label="Toggle dark mode" aria-pressed="false">
